    .toto-top-up__process-inner {
      display: grid;
      grid-template-columns: 30% 30% 30%;
      gap: 32px;
      width: 100%;
    }

    .toto-top-up__process-item {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 4px;
    }

    .toto-top-up__process-item-step {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 10;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: 1px solid #f8ad34;
      background: #efefef;
      font-weight: bold;
    }

    .toto-top-up__process-item.active .toto-top-up__process-item-step {
      background: #f8ad34;
      color: #fff;
    }

    .toto-top-up__process-item-label {
      text-align: center;
    }

    .toto-top-up__process-item::after {
      content: "";
      position: absolute;
      top: 14px;
      left: 50%;
      width: calc(100% + 32px);
      height: 4px;
      background: rgba(0, 0, 0, .1);
      display: inline-block;
      margin: 0 .6em;
    }

    /* Loại bỏ ::after cho phần tử thứ 3 */
